<Alloy>
	<Window onAndroidback="didClickSubmit">
		<ScrollView id="containerView" class="auto-height vgroup">
			<Label id="loadingLbl" class="margin-top fg-white text-center hidden" />
			<Label id="hintLbl" class="width-80 fg-white text-center" />
			<TextField id="txt" class="margin-top width-80 bg-white h2" onReturn="didClickSubmit" />
			<Button id="submitBtn" class="margin-bottom primary-button" onClick="didClickSubmit" />
		</ScrollView>
	</Window>
</Alloy>