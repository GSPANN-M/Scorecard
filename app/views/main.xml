<Alloy>
	<Window onOpen="didOpen" onClose="didClose" onAndroidback="didAndroidback">
		<View id="navBarView" class="nav-bar bg-red">
			<View class="nav-bar-title-view">
				<ImageView class="tile-from-top logo" />
				<Label id="titleLbl" class="padding-top h1 fg-white text-center" />
			</View>
		</View>
		<View id="template" class="template">
			<View id="tileContainer" class="hgroup no-hwrap">
				<ScrollView id="columnOne" class="left width-32 vgroup" onScroll="didScroll" />
				<ScrollView id="columnTwo" class="from-left width-32 vgroup" onScroll="didScroll" />
				<ScrollView id="columnThree" class="from-left width-32 vgroup" onScroll="didScroll" />
			</View>
		</View>
		<View id="modalView" class="fill hidden hidden-opacity bg-semitransparent">
			<ScrollView id="modalContent" class="vgroup">
				<View id="optionView" class="margin-top auto hgroup no-hwrap">
					<View id="thumbUp" class="option-view" onClick="didClickOption">
						<ImageView image="/images/thumb_up.png" class="touch-disabled" />
					</View>
					<View id="thumbDown" class="margin-left option-view" onClick="didClickOption">
						<ImageView image="/images/thumb_down.png" class="touch-disabled" />
					</View>
				</View>
				<Widget id="txta" src="com.mykingdom.textarea" class="margin-top width-75 h2 bg-white" />
				<Button title="OK" class="primary-button" onClick="didClickOK" />
				<Button title="Cancel" class="margin-bottom primary-button" onClick="closeModal" />
			</ScrollView>
		</View>
	</Window>
</Alloy>