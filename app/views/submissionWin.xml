<Alloy>
	<Window onAndroidback="didBack">
		<View id="navBarView" class="nav-bar bg-red">
			<View class="left nav-icon-view width-80d" onClick="didBack">
				<ImageView image="/images/back.png" class="margin-left nav-icon touch-disabled" />
			</View>
			<View class="nav-bar-title-view">
				<Label id="titleLbl" class="fill-height h1 fg-white text-center" />
			</View>
			<ImageView class="margin-right logo" />
		</View>
		<ScrollView class="template vgroup">
			<Label id="loadingLbl" class="margin-top fg-white text-center hidden" />
			<View id="tileContainer" class="margin-top auto hgroup no-hwrap" />
			<Widget id="txta" src="com.mykingdom.textarea" class="margin-top width-75 h2 bg-white" />
			<Label id="hintLbl" class="margin-top width-80 fg-white text-center" />
			<View id="optionView" feedback="none" class="margin-top auto hgroup no-hwrap">
				<View id="thumbUp" class="option-view" onClick="didClickOption">
					<ImageView id="thumbUpImg" image="/images/thumb_up_grey.png" class="touch-disabled" />
				</View>
				<View id="thumbDown" class="padding-left option-view" onClick="didClickOption">
					<ImageView id="thumbDownImg" image="/images/thumb_down_grey.png" class="touch-disabled" />
				</View>
			</View>
			<View id="submitBtn" class="margin-bottom button" onClick="didClickSubmit">
				<Label text="Submit Survey" class="button-lbl" />
			</View>
		</ScrollView>
	</Window>
</Alloy>